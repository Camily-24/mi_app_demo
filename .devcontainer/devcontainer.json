
{
    //Imagen base de desarrollo 
    "name": "Python-Django en Codeespace",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    //Personalización del editor
    "customizations": {
        "vscode": {
            //lista de extensiones requeridas
            "extensions": [
                "GitHub.copilot",
                "GitHub.copilot-Labs",
                "ms-dotnettools.csharp",
                "GitHub.copilot-chat",
                "ms-python.python"
            ]
        }
    },
    //Lista de comandos a ejecutar en la creación del contenedor
    "postCreateCommand": "apt-get update && pip install Django && sudo apt-get install msodbcsql17 && pip install pyodbc"
    
}